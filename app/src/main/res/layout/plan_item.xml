<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plan_item"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/paln_number"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/paln_number">

        <TextView
            android:id="@+id/plan_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="我想吃点饭" />

        <TextView
            android:id="@+id/importance"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:text="60" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/paln_number">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="开始时间："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_start_time"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="11月11日10时10分" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:gravity="center_vertical"
            android:text="截止时间："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_end_time"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="11月11日10时11分" />
    </RelativeLayout>
</RelativeLayout>